<?xml version="1.0" encoding="UTF-8"?>
<!-- https://dearpygui.readthedocs.io/en/latest/documentation/menus.html -->
<dpg mode="full">
    <viewport title="this is a test for the menu bar test"/>

    <viewport_menu_bar>

        <menu label="File">
            <menu_item label="Save" callback="print_me"/>
            <menu_item label="Save As" callback="print_me"/>
            <menu label="Settings">
                <menu_item label="Setting 1" callback="print_me" check="True"/>
                <menu_item label="Setting 2" callback="print_me"/>
            </menu>
        </menu>

        <menu_item label="Help" callback="print_me"/>

        <menu label="Widget Items">
            <checkbox label="Pick Me" callback="print_me"/>
            <button label="Press Me" callback="print_me"/>
            <colot_picker label="Color Me" callback="print_me"/>
        </menu>

    </viewport_menu_bar>
</dpg>
